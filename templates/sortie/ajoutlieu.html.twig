{% extends 'base.html.twig' %}

{% block body %}
    <div class="box has-text-centered m-6 has-background-info">

            <p class="is-size-3"> Ajouter un Lieu </p>
            <label for=""> Lieu de rattachement </label>
            <p> {{ app.user.idParticipant.site }} </p>


            {{ form_start(formAjoutLieu, {'attr': {'id': 'formulaireAjoutLieu', 'class': 'box p-6'}}) }}

            {{ form_row(formAjoutLieu.nom, {
                'label_attr': {'class': ' text-primary'},
                'attr' : {'class':'input is-link is-rounded',
                    'placeholder':'Nom du lieu',
                    'type':'text',
                    'aria-describedby':"inputGroup-sizing-sm"
                },
            }) }}
            <br>
            {{ form_row(formAjoutLieu.rue, {
                'label_attr': {'class': ' text-primary'},
                'attr' : {'class':'input is-link is-rounded',
                    'placeholder':'',
                    'type':'date',
                    'aria-describedby':"inputGroup-sizing-sm"
                },
            }) }}
            <br>

            <div id="notif" onclick="info()">
            {{ form_row(formAjoutLieu.latitude, {
                'label_attr': {'class': ' text-primary'},
                'attr' : {'class':'input is-link is-rounded',
                    'placeholder':'',
                    'type':'date',
                    'aria-describedby':"inputGroup-sizing-sm"
                },
            }) }}
            </div>
            <br>
            {{ form_row(formAjoutLieu.longitude, {
                'label_attr': {'class': ' text-primary'},
                'attr' : {'class':'input is-link is-rounded',
                    'placeholder':'',
                    'type':'date',
                    'aria-describedby':"inputGroup-sizing-sm"
                },
            }) }}
            <br>
            {{ form_row(formAjoutLieu.idVille)}}
            <br>
            <div class="field is-grouped is-grouped-centered">
                <div class="control">
                    {{ form_row(formAjoutLieu.valider)}}
                </div>



        {{ form_end(formAjoutLieu) }}

    </div>
    </div>
    </div>

    <script type="text/javascript">
            function info() {

            if(document.getElementById('test') == null || document.getElementById('test') === 'undefined') {
            let p = document.getElementById('notif')
            let ajout = document.createElement("div")
            ajout.className = "notification is-link is-size-7"
            ajout.setAttribute('id', 'test')
            let text = "Rdv sur https://www.latlong.net pour inscrire les coordonn√©es";
            ajout.innerText = text

            p.appendChild(ajout)

        }
        }
    </script>



    </script>

{% endblock %}

